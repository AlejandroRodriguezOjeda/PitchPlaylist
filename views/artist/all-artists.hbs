
<div class="p-3 mb-2 bg-danger text-white">
<h2>All artists in PitchPlaylist:</h2>  
{{#if isAdmin}}
    <a href="/artist/new-artist"> <button type="button" class="btn btn-dark">Create a new artist</button></a>  
</div>

      {{/if}}
   <br>   

 <div class="artist-container">
  
       
      {{#each allArtists}}
       <div class="artist-card"> 
          <img src="{{this.photo}}" alt="artist photo" width="200px">
          <a href="/artist/{{this._id}}/info" >
            <h6>{{this.name}}</h6></a>
           
          
        </div>
      {{/each}}
    </div>
  </div>
</div>



